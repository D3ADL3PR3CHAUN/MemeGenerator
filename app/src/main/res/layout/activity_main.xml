<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mcgee.memegenerator.MainActivity">

    <fragment
        android:id="@+id/topFragment"
        android:name="mcgee.memegenerator.TopSectionFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_top_section" />

    <fragment
        android:id="@+id/botFragment"
        android:name="mcgee.memegenerator.BotMemeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topFragment"
        tools:layout="@layout/fragment_bot_meme" />

</RelativeLayout>
